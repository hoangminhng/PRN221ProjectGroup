@page "{conversationId}"
@model ChatSystem.Pages.Users.UserGroupModel
@{
    ViewData["Title"] = "Group Details";
}

<div class="container mt-4">
    <h2>Group Details</h2>
    <hr>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Conversation1.ConversationName</h5>
            <h6>Group Members:</h6>
            <ul class="list-group">
                @foreach (var user in Model.GroupChatParticipants)
                {
                    <li class="list-group-item">@user.KnownAs</li>
                }
            </ul>
            <div class="mt-3">
                <button class="btn btn-primary me-3">Button 1</button>
                <button class="btn btn-secondary me-3">Button 2</button>
                <button class="btn btn-danger">Button 3</button>
            </div>
        </div>
    </div>
</div>
