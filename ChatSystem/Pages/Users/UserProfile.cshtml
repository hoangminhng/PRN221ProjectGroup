@page
@model ChatSystem.Pages.Users.UserProfileModel
@{
}

<link rel="stylesheet" href="~/css/profile.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<script src="~/js/signalr.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="top-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a class="text-dark" asp-area="" asp-page="/Users/UserList">People</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.UserProfile.UserName</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="img" style="    background-image: linear-gradient(150deg, rgba(63, 174, 255, .3)15%, rgba(63, 174, 255, .3)70%, rgba(63, 174, 255, .3)94%), url(https://bootdey.com/img/Content/flores-amarillas-wallpaper.jpeg);
    height: 350px;background-size: cover;"></div>
    <div class="card social-prof">
        <div class="card-body">
            <div class="wrapper">
                <img src="@Model.UserProfile.Avatar" alt="" class="user-profile">
                <h3>@Model.UserProfile.UserName</h3>
                <p>@Model.UserProfile.KnownAs</p>
            </div>
            <div class="row ">
                <div class="col-lg-12">
                    <ul class="nav nav-pills justify-content-center">
                        <li class="nav-item"><a class="nav-link active" asp-page="/Users/UserProfile">About</a></li>
                        <li><a href="#">Friends</a></li>
                        <li><a href="#">Photos</a></li>
                    </ul>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-lg-11 mx-auto">
                    <div class="nav nav-pills justify-content-end">
                        @if (Model.IsLogined && !Model.IsFriend)
                        {
                            if (Model.FriendStatus == 0)
                            {
                                <form method="post" asp-page-handler="AddFriend" id="addFriendForm">
                                    <input type="hidden" name="UserId" value="@Model.UserProfile.UserId" />
                                    <button type="submit" id="addFriend" name="addFriend" value="@Model.UserProfile.UserId" class="btn btn-outline-primary" data-recipientUserId="@Model.UserProfile.UserId">Add Friend</button>
                                </form>
                                <script>
                                    "use strict";
                                    var connection = new signalR.HubConnectionBuilder().withUrl("/friendRequest").build();

                                    connection.start().then(res => {
                                        connection.invoke("JoinGroup", "@Model.UserProfile.UserId")
                                            .then(() => console.log("friend-notification group" + @Model.UserProfile.UserId))
                                            .catch(err => {
                                                console.log(err);
                                            });
                                    }).catch(err => {
                                        console.error(err);
                                    });

                                    connection.on("OnSendFriendRequest", function () {
                                        console.log("OnSendFriendRequest work");
                                        document.getElementById("addFriend").innerHTML = "Waiting for response";
                                        document.getElementById("addFriend").setAttribute("disabled", "disabled");
                                    });
                                </script>


                            }
                            else if (Model.FriendStatus == 1)
                            {
                                <form method="post" asp-page-handler="Unfriend">
                                    <input type="hidden" name="UserId" value="@Model.UserProfile.UserId" />
                                    <button type="submit" class="btn btn-danger" disabled>Waiting for response</button>
                                </form>
                            }
                            else if (Model.FriendStatus == 2)
                            {
                                <form method="post" asp-page-handler="AcceptFriend">
                                    <input type="hidden" name="UserId" value="@Model.UserProfile.UserId" />
                                    <button type="submit" class="btn btn-success">Accept</button>
                                </form>
                                <form method="post" asp-page-handler="DeclineFriend">
                                    <input type="hidden" name="UserId" value="@Model.UserProfile.UserId" />
                                    <button type="submit" class="btn btn-danger">Decline</button>
                                </form>
                            }
                        }
                        else if (Model.IsLogined && Model.IsFriend)
                        {
                            <form method="post" asp-page-handler="StartConversation">
                                <input type="hidden" name="UserId" value="@Model.UserProfile.UserId" />
                                <button type="submit" class="btn btn-outline-primary">Chat</button>
                            </form>

                            <form method="post" asp-page-handler="Unfriend">
                                <input type="hidden" name="UserId" value="@Model.UserProfile.UserId" />
                                <button type="submit" class="btn btn-danger">Unfriend</button>
                            </form>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body info-card social-about">
                    <h2 class="text-blue">About</h2>
                    <h4><strong>About Me</strong></h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
                    <h4 class="mb-3"><strong>Personal Info</strong></h4>
                    <div class="row">
                        <div class="col-6">
                            <div class="social-info">
                                <i class="bi bi-cake"></i>
                                <span>@Model.UserProfile.DateOfBirth.ToString("M/d/yyyy")</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="social-info">
                                <i class="bi bi-pin-map-fill"></i>
                                <span>@Model.UserProfile.City</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="social-info">
                                <i class="bi bi-check-circle"></i>
                                <span>@Model.UserProfile.Interest</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="social-info">
                                <i class="bi bi-gender-ambiguous"></i>
                                <span>@Model.UserProfile.Gender</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="social-info">
                                <i class="bi bi-chat-left-text-fill"></i>
                                <span>@Model.UserProfile.Introduction</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#addFriendForm').submit(function (event) {
            event.preventDefault(); // Prevent form submission
            var formData = $(this).serialize(); // Serialize form data

            $.ajax({
                url: '/Users/UserProfile?handler=AddFriend', // URL to your server-side handler
                method: 'POST',
                data: formData, // Form data to send
                success: function (response) {
                    // Update UI based on the response
                    toastr.success('Friend request sent successfully');
                    console.log("send");
                    $('#addFriend').text('Waiting for response').prop('disabled', true);
                },
                error: function (err) {
                    console.error('Failed to send friend request:', err);
                    toastr.error('Failed to send friend request');
                }
            });
        });
    });
</script>