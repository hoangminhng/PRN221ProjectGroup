@page
@model ChatSystem.Pages.Users.FriendRequestModel
@{
}

<div class="container">
    <div class="row">
        @foreach (var request in Model.Request)
        {

            <div class="card" style="width: 18rem;">
                <a asp-page="UserProfile" asp-route-userId="@request.SenderId" class="text-decoration-none">
                    <img class="card-img-top" src="@request.AvatarUrl" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text text-uppercase text-muted">@request.SenderName</p>
                        <p class="card-text text-muted">@request.DateSend</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <form method="post">
                                <input type="hidden" name="requestId" value="@request.RequestId" />
                                <button asp-page-handler="Accept" class="btn btn-outline-primary">Accept</button>
                                <button asp-page-handler="Decline" class="btn btn-outline-danger">Decline</button>
                            </form>
                        </div>
                    </div>
                </a>
            </div>

        }
    </div>
</div>

